pipeline {
    agent any
    options {
              buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', 
              daysToKeepStr: '50', numToKeepStr: '10'))
               
              disableConcurrentBuilds()
              
              retry(2)
              
              timestamps
              timeout(1)
}

    stages {
        stage('Build Bot app') {
            steps {
               withCredentials([usernamePassword(credentialsId: 'docker-hub-shani', passwordVariable: 'pass', usernameVariable: 'user')]) {
   
                  sh "docker build -t shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER} . "
                  sh "docker login --username $user --password $pass"
                  sh "docker push shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER}"
                }
            }
        }
        stage('Stage II') {
            steps {
                sh 'echo "stage II..."'
            }
        }
        stage('Stage III ...') {
            steps {
                sh 'echo echo "stage III..."'
           }
      }
  }
  
  post{
    always{
        sh "docker image prune -a"
    }
  }
  
  
  
  
  
}

pipeline {
    agent any

    stages {
        stage('Build Bot app') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'git-hub-shani', passwordVariable: 'pass1', usernameVariable: 'user1')]) {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-shani', passwordVariable: 'pass2', usernameVariable: 'user2')])


                  sh "sudo docker build -t shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER} . "
                  sh "sudo docker login --username $user2 --password $pass2"
                  sh "sudo docker push shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER}"
                }
            }
        }
        stage('Stage II') {
            steps {
                sh 'echo "stage II..."'
            }
        }
        stage('Stage III ...') {
            steps {
                sh 'echo echo "stage III..."'
            }
        }
    }
}

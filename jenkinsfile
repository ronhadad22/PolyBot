pipeline {
    agent any

    stages {
        stage('Build Bot app') {
            steps {
               withCredentials([usernamePassword(credentialsId: 'docker-hub-shani', passwordVariable: 'pass', usernameVariable: 'user')]) {
   
                  sh "sudo docker build -t shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER} . "
                  sh "sudo docker login --username $user --password $pass"
                  sh "sudo docker push shaniben/shani-repo:poly-bot-${env.BUILD_NUMBER}"
                }
            }
        }
        stage('Stage II') {
            steps {
                sh 'echo "stage II..."'
            }
        }
        stage('Stage III ...') {
            steps {
                sh 'echo echo "stage III..."'
            }
      }
  }
}
